# Vite env vars for Hasura Cloud + Auth0
VITE_HASURA_GRAPHQL_ENDPOINT=https://your-hasura-project.hasura.app/v1/graphql
# Optional: only for local dev or admin tasks from client (avoid in production)
VITE_HASURA_ADMIN_SECRET=

# Auth0 application config
VITE_AUTH0_DOMAIN=your-tenant.us.auth0.com
VITE_AUTH0_CLIENT_ID=your_auth0_client_id
# Audience should match your Hasura JWT audience (often your Hasura GraphQL URL)
VITE_AUTH0_AUDIENCE=https://your-hasura-project.hasura.app
